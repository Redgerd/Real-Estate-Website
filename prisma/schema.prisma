generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  property_id   Int           @id @default(autoincrement()) // Unique identifier for each property
  property_type String        // Type of property (House, Apartment, etc.)
  price         Float         // Price of the property
  price_bin     String        // Categorized price range (Low, High, etc.)
  area          String        // Area measurement (e.g., Kanal, Marla)
  area_marla    Float         // Area in Marla
  area_sqft     Float         // Area in square feet
  baths         Int           // Number of bathrooms
  bedrooms      Int           // Number of bedrooms
  purpose       String        // Purpose of the property (For Sale, For Rent, etc.)
  location_id   Int           // Foreign key referencing location_id from Location table
  date_added    DateTime      // Date when the property was added

  location      Location      @relation(fields: [location_id], references: [location_id])
}

model Location {
  location_id   Int           @id @default(autoincrement()) // Unique identifier for each location
  city          String        // City name
  province_name String        // Province name
  locality      String        // Locality name
  latitude      Float         // Latitude of the location
  longitude     Float         // Longitude of the location

  properties    Property[]    // One-to-many relation with Property table
}
